{
  "compilerOptions": {
    "checkJs": true,
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "types": ["vite/client", "node"]
  },
  "include": ["**/vite*config*", "**/panda*config*", "**/*.ts", "scenarios/**/*.ts"],
  "exclude": ["**/dist/**"]
}
